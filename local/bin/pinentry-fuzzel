#!/bin/sh

# Base command and misc variables
DESC=""
PROMPT=""

echo "OK Please go ahead"
while read cmd rest; do
    case $cmd in
        GETINFO)
            case "$rest" in
                flavor)
                    echo "D fuzzel"
                    echo "OK"
                    ;;
                version)
                    echo "D 0.1"
                    echo "OK"
                    ;;
                ttyinfo)
                    echo "D - - -"
                    echo "OK"
                    ;;
                pid)
                    echo "D $$"
                    echo "OK"
                    ;;
            esac
            ;;

        SETDESC)
            DESC=$rest
            echo "OK"
            ;;

        SETERROR)
            exit 1
            # Password retry not working correctly, so exit fast instead
            #echo "$(fuzzel.sh --prompt-only "üîê ${rest} " --cache /dev/null --dmenu --password)"
            #echo "OK"
	    ;;

        SETPROMPT)
            PROMPT="${rest}"
            echo "OK"
            ;;

        GETPIN | getpin)
            echo "D $(fuzzel.sh --prompt-only "üîê ${PROMPT} " --cache /dev/null --dmenu --password)"
            echo "OK"
            ;;

        BYE|bye)
            echo "OK closing connection"
            exit 0
            ;;

        *)
            echo "OK"
            ;;
        esac
done
